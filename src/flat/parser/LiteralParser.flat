package flat/parser

import flat/ast/LiteralNode
import flat/compiler/models/Token

class extends ParserBase {
  override let lazy TokenMatcher pattern => TokenMatcherGroup([
    TokenMatcher(Token.Type.STRING, label: "value")
  ])

  override public async generateNode(ParseContext context, TokenMatch match) -> LiteralNode {
    let value = match.getValue("value")

    return LiteralNode(
      value: value,
      literalType: LiteralNode.Type.STRING
    )
  }
}