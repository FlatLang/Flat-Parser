package flat/parser/flat

import flat/parser
import flat/parser/matchers
import flat/datastruct/HashMap
import flat/parser/Parser
import flat/ast/FileNode
import flat/ast/VariableDeclarationNode
import flat/compiler/models/Token
import flat/io/File

testable class {
  test `can parse declaration`() {
    let parser = VariableDeclarationParser()

    let match = GroupTokenMatch(tokenMatches: [
      SingleTokenMatch(
        tokens: [Token(value: "String", type: Token.Type.IDENTIFIER)],
        label: "declaration_type"
      ),
      SingleTokenMatch(
        tokens: [Token(value: "test", type: Token.Type.IDENTIFIER)],
        label: "declaration_name"
      )
    ])

    let result = parser.generateNode(null, match)

    let expected = VariableDeclarationNode(
      type: "String",
      name: "test"
    )

    expect(result).toBe(expected)
  }

  test `can parse declaration with array type`() {
    let parser = VariableDeclarationParser()

    let match = GroupTokenMatch(tokenMatches: [
      SingleTokenMatch(
        tokens: [Token(value: "String", type: Token.Type.IDENTIFIER)],
        label: "declaration_type"
      ),
      SingleTokenMatch(
        tokens: [Token(value: "test", type: Token.Type.IDENTIFIER)],
        label: "declaration_name"
      ),
      GroupTokenMatch(tokenMatches: [
        SingleTokenMatch(tokens: [Token(value: "[", type: Token.Type.SYMBOL)]),
        SingleTokenMatch(tokens: [Token(value: "]", type: Token.Type.SYMBOL)])
      ], label: "brackets")
    ])

    let result = parser.generateNode(null, match)

    let expected = VariableDeclarationNode(
      type: "String",
      name: "test",
      arrayDimensions: 1
    )

    expect(result).toBe(expected)
  }
}
